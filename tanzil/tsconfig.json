{
	"extends": "@quran/tsconfig/vite.json",
	"compilerOptions": {
		"allowJs": false,
		"baseUrl": ".",
		"composite": false,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"isolatedModules": false,
		"types": ["@tauri-apps/api", "vite/client", "unplugin-icons/types/react"],
		"useDefineForClassFields": true
		// "jsxImportSource": "signia-react-jsx"
	},
	"include": ["src"],
	"exclude": ["*.stories.tsx"]
}
