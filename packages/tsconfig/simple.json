{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Simple.js",
	"extends": "./base.json",
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": false
	},
	"exclude": [
		"node_modules"
	],
	"include": ["src"]
}
