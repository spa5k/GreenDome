{
	"extends": "@quran/tsconfig/simple.json",
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"],
	"ts-node": {
		"swc": true,
		"esm": true
	},
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"allowSyntheticDefaultImports": true,
		"lib": ["ES2022", "DOM"]
	}
}
