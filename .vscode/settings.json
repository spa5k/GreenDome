{
	"[javascript]": {
		"editor.defaultFormatter": "dprint.dprint"
	},
	"[toml]": {
		"editor.defaultFormatter": "dprint.dprint"
	},
	"[typescript]": {
		"editor.defaultFormatter": "dprint.dprint"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "dprint.dprint"
	},
	"conventionalCommits.scopes": [
		"main",
		"docs",
		"database",
		"tanzil",
		"deps",
		"routing",
		"tajweed",
		"refactor",
		"github",
		"tailwind",
		"lint",
		"ci",
		"salah",
		"iqra",
		"scraper",
		"core",
		"tauri",
		"nextjs"
	],
	"editor.codeActionsOnSave": {
		"source.fixAll": true,
		"source.organizeImports": true
	},
	"editor.defaultFormatter": "dprint.dprint",
	"editor.formatOnSave": true,
	"tailwindCSS.experimental.classRegex": [
		[
			"cva\\(([^)]*)\\)",
			"[\"'`]([^\"'`]*).*?[\"'`]",
			"cn\\(([^)]*)\\)",
			"clsx\\(([^)]*)\\)",
			"className\\(([^)]*)\\)"
		]
	],
	"tailwindCSS.experimental.configFile": "./libs/config/src/tailwind.config.ts",
	"workbench.colorCustomizations": {}
}
