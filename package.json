    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "prebuild-install": "^7.1.2",
    "tailwindcss": "^3.4.14",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3"
  },
  "build": {
    "asar": true,
    "executableName": "GreenDome",
    "productName": "GreenDome App",
    "appId": "com.saybackend.greendome",
    "asarUnpack": [
      "public"
    ],
    "files": [
      "build",
      "public",
      "!node_modules/**/*.map",
      "!node_modules/**/*.ts",
      {
        "from": ".next/standalone",
        "to": "app",
        "filter": [
          "!**/.env",
          "!**/package.json"
        ]
      },
      {
        "from": ".next/static",
        "to": "app/.next/static"
      },
      {
        "from": "public",
        "to": "app/public"
      }
    ],
    "win": {
      "icon": "public/icons/icons/win/icon.ico",
      "target": [
        {
          "target": "nsis-web",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        }
      ]
    },
    "nsisWeb": {
      "runAfterFinish": false
    },
    "mac": {
      "identity": null,
      "target": {
        "target": "dmg",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      "type": "distribution",
      "notarize": false,
      "gatekeeperAssess": false,
      "icon": "public/icons/icons/mac/icon.icns"
    },
    "linux": {
      "icon": "public/icons/icons/png",
      "category": "Utility",
      "target": [
        "AppImage",
        "freebsd",
        "deb",
        "rpm"
      ]
    },
    "deb": {
      "depends": [
        "libgtk-3-0",
        "libnotify4",
        "libnss3",
        "libxss1",
        "libxtst6",
        "xdg-utils",
        "libatspi2.0-0",
        "libuuid1",
        "libasound2",
        "libgbm1"
      ]
    },
    "rpm": {
      "depends": [
        "/usr/lib64/libuuid.so.1"
      ],
      "fpm": [
        "--rpm-rpmbuild-define",
        "_build_id_links none"
      ]
    }
  },
  "auto-changelog": {
    "hideCredit": true,
    "package": true,
    "unreleased": true,
    "output": "changelog.md"
  }
}
